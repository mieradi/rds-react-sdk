{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@types": [
                "src/types/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@customHooks/*": [
                "src/customHooks/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@icons/*": [
                "src/icons/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
        },
        "outDir": "dist",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src",
        "components",
        "utils",
        "types",
        "icons",
        "customHooks"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "example",
        "rollup.config.js"
    ]
}
